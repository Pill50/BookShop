{{#each popularList}}
    <div class="max-w-full bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col">
        <img class="rounded-t-lg h-40 object-cover" src="{{this.thumbnail}}" alt="{{this.title}}" />
        <div class="p-5 flex-grow">
            <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">{{this.title}}</h5>
            <p class="font-normal text-gray-700 dark:text-gray-400 truncate ...">{{this.description}}</p>
            <p class="italic">Author: {{this.author.name}}</p>
            <p class="italic">Publisher: {{this.publisher.name}}</p>
            <p class="flex gap-1 items-center">Sold amount: <span class="font-semibold text-xl">{{this.soldNumber}}</span></p>
        </div>
        <div class="p-2 rounded-md bg-red-100 mt-auto mx-4 mb-4">
            <p class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                POPULAR
            </p>
        </div>
    </div>
{{/each}}