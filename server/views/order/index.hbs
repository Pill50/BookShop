{{#> app}}
  {{#*inline "content"}}
  <div class="container py-4 min-h-[calc(100vh-180px)]">
    <h1 class="font-bold text-2xl text-blue-500 text-center mb-2">MANAGE ORDER PAGE</h1>
    <div class="overflow-x-auto p-4">
        <div class="">
            <table class="text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 shadow-md sm:rounded-lg w-full">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Receiver Name
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Receiver Phone
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Address
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Shipper
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Note
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Amount
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Total Price
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Status
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each orders}}
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 cursor-pointer hover:bg-blue-100" onclick="window.location.href='/admin/order/{{id}}'">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{@index}}
                        </th>
                        <td class="px-6 py-4">
                            {{receiverName}}
                        </td>
                        <td class="px-6 py-4">
                            {{receiverPhone}}
                        </td>
                        <td class="px-6 py-4">
                            {{address}}
                        </td>
                        <td class="px-6 py-4">
                            {{shipper.companyName}}
                        </td>
                        <td class="px-6 py-4">
                            {{note}}
                        </td>
                        <td class="px-6 py-4">
                            {{amount}}
                        </td>
                        <td class="px-6 py-4">
                            {{totalPrice}}
                        </td>
                        <td class="px-6 py-4">
                            <span class="{{getStatusColorClass status}}">
                                {{status}}
                            </span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
  </div>
  {{/inline}}
{{/app}}
