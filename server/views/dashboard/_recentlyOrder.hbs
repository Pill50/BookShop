<a
  href='#'
  class='flex flex-col items-center justify-center bg-white border border-green-200 rounded-lg shadow md:flex-row md:max-w-xl hover:bg-green-100 dark:border-green-700 dark:bg-green-800 dark:hover:bg-green-700 gap-4'
>
  <div class='flex flex-col items-center'>
    <img
      class='object-cover h-20 w-20 rounded-full'
      src='{{this.user.avatar}}'
      alt='{{this.user.displayName}}'
    />
    <p class='font-bold text-lg text-green-600'>{{this.user.displayName}}</p>
  </div>
  <div
    class='flex flex-col justify-between p-4 leading-normal bg-green-50 my-4 rounded-lg'
  >
    <p class='font-semibold text-green-700'>Address: {{this.address}}</p>
    <p class='font-semibold text-green-700'>Receiver's name:
      {{this.receiverName}}</p>
    <p class='font-semibold text-green-700'>Receiver's phone:
      {{this.receiverPhone}}</p>
    <p class='font-semibold text-green-700'>Amount items: {{this.amount}}</p>
    <p class='font-semibold text-green-700'>Total price: {{this.totalPrice}}</p>
    <p class='font-semibold text-green-700'>Order date:
      {{formatDate createdAt}}</p>
  </div>
</a>