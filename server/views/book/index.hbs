{{#> app}}
  {{#*inline "content"}}
  <div class="container py-4 min-h-[calc(100vh-180px)]">
    <h1 class="font-bold text-2xl text-blue-500 text-center mb-2">MANAGE BOOK PAGE</h1>
    <div class="overflow-x-auto p-4">
        <div class="my-2">
            <button type="button" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" onclick="window.location.href='/admin/book/create'">
                Create new
            </button>
        </div>
        <div class="">
            <table class="text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400 shadow-md sm:rounded-lg w-full">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-3 py-3">
                            ID
                        </th>
                        <th scope="col" class="px-3 py-3">
                            Thumbnail
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Title
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Description
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Price
                        </th>
                        <th scope="col" class="px-3 py-3">
                            Amount
                        </th>
                        <th scope="col" class="px-3 py-3">
                            Sold Number
                        </th>
                        <th scope="col" class="px-3 py-3">
                            Author
                        </th>
                        <th scope="col" class="px-3 py-3">
                            Publisher
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Categories
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {{#each bookList.books}}
                    <tr class="odd:bg-white odd:dark:bg-gray-900 even:bg-gray-50 even:dark:bg-gray-800 border-b dark:border-gray-700 hover:bg-blue-100 cursor-pointer" onclick="window.location.href='/admin/book/{{this.id}}'">
                        <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                            {{@index}}
                        </td>
                        <td class="px-6 py-4">
                            <img src={{thumbnail}} alt={{title}} class="w-20 h-20 object-cover rounded-md">
                        </td>
                        <td class="px-6 py-4 font-bold">
                            {{title}}
                        </td>
                        <td class="px-6 py-4">
                            {{description}}
                        </td>
                        <td class="px-6 py-4">
                            {{price}}
                        </td>
                        <td class="px-6 py-4">
                            {{amount}}
                        </td>
                        <td class="px-6 py-4">
                            {{soldNumber}}
                        </td>
                        <td class="px-6 py-4">
                            {{author.name}}
                        </td>
                        <td class="px-6 py-4">
                            {{publisher.name}}
                        </td>
                        <td class="px-6 py-4">
                            {{categories}}
                        </td>
                        <td class="flex items-center py-8">
                            <a class="text-blue-500 underline p-2" href="/admin/book/update/{{id}}">
                                <img src="/img/icon/edit.svg" alt="Edit">
                            </a>
                            <a class="text-blue-500 underline p-2" href="/admin/book/delete/{{id}}">
                                <img src="/img/icon/delete.svg" alt="Delete">
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
  </div>
  {{/inline}}
{{/app}}
