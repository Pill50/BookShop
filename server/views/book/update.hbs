{{#> app}}
  {{#*inline "content"}}
  <div class="container px-20 min-h-[calc(100vh-180px)]">
    <h1 class="font-bold text-2xl text-blue-500 text-center mb-2">UPDATE BOOK</h1>
    
    <form class="mx-auto shadow-lg p-3 rounded-md" method="POST" action="/admin/book/update/{{book.id}}" enctype="multipart/form-data"  id="updateBookForm">
        <div class="">
            <label for="title" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Title</label>
            <div class="flex mb-2">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                    <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6.2V5h11v1.2M8 5v14m-3 0h6m2-6.8V11h8v1.2M17 11v8m-1.5 0h3"/>
                    </svg>
                </span>
                <input type="text" id="title" name="title" value="{{book.title}}" class="rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Bonnie Green">
            </div>
        </div>
        <div class="">
            <label for="description" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description</label>
            <div class="flex mb-2">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                    <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6.2V5h11v1.2M8 5v14m-3 0h6m2-6.8V11h8v1.2M17 11v8m-1.5 0h3"/>
                    </svg>
                </span>
                <input type="text" id="description" name="description" value="{{book.description}}" class="rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Bonnie Green">
            </div>
        </div>
        <div class="">
            <label for="categories" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Categories</label>
            <div class="flex mb-2 gap-3 flex-wrap border-[1px] p-2 rounded-md">
            {{#each categoryList.categories}}
            <div class="flex items-center">
                <input id="{{this.id}}" type="checkbox" value="{{this.id}}" name="categories[]" 
                class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600"
                {{#if (isCategorySelected this.id ../book.categories)}}checked{{/if}}>
                <label for="{{this.id}}" class="ms-1 text-sm font-medium text-gray-900 dark:text-gray-300">{{this.title}}</label>
            </div>  
            {{/each}}
        </select>
            </div>
        </div>
        <div class="flex gap-3">
            <div class="flex-1">
                <div class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Author</div>
                <div class="flex mb-2 gap-3 flex-wrap border-[1px] p-2 rounded-md">
                {{#each authorList.authors}}
                    <div class="flex items-center">
                        <input id="{{id}}" type="radio" value={{id}} name="authorId" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" {{#if (eq id ../book.author.id)}}checked{{/if}}>
                        <label for="{{id}}" class="ms-1 text-sm font-medium text-gray-900 dark:text-gray-300">{{name}}</label>
                    </div>  
                {{/each}}
                </div>
            </div>
            <div class="flex-1">
                <div class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Publisher</div>
                <div class="flex mb-2 gap-3 flex-wrap border-[1px] p-2 rounded-md">
                {{#each publisherList.publishers}}
                    <div class="flex items-center">
                        <input id="{{id}}" type="radio" value={{id}} name="publisherId" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" {{#if (eq id ../book.publisher.id)}}checked{{/if}}>
                        <label for="{{id}}" class="ms-1 text-sm font-medium text-gray-900 dark:text-gray-300">{{name}}</label>
                    </div>  
                {{/each}}
                </div>
            </div>
        </div>
        <div class="flex gap-3">
            <div class="flex-1">
                <label for="price" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Price</label>
                <div class="flex mb-2">
                    <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                        <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6.2V5h11v1.2M8 5v14m-3 0h6m2-6.8V11h8v1.2M17 11v8m-1.5 0h3"/>
                        </svg>
                    </span>
                    <input type="number" id="price" name="price" value="{{book.price}}" class="rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="0">
                </div>
            </div>
            <div class="flex-1">
                <label for="amount" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Amount</label>
                <div class="flex mb-2">
                    <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                        <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6.2V5h11v1.2M8 5v14m-3 0h6m2-6.8V11h8v1.2M17 11v8m-1.5 0h3"/>
                        </svg>
                    </span>
                    <input type="number" id="amount" name="amount" value="{{book.amount}}" class="rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="0">
                </div>
            </div>
            <div class="flex-1">
                <label for="discount" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Discount</label>
                <div class="flex mb-2">
                    <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                        <svg class="w-4 h-4 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6.2V5h11v1.2M8 5v14m-3 0h6m2-6.8V11h8v1.2M17 11v8m-1.5 0h3"/>
                        </svg>
                    </span>
                    <input type="number" id="discount" name="discount" value="{{book.discount}}" class="rounded-none rounded-e-lg bg-gray-50 border border-gray-300 text-gray-900 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5  dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="0">
                </div>
            </div>
        </div>
        <label for="thumbnail" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Thumbnail</label>
        <div class="mb-2">
            <img src="{{book.thumbnail}}" alt="{{book.title}}" class="w-40 h-40 border-[1px] mb-2 rounded-md object-cover">
            <input name="thumbnail" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" id="thumbnail" type="file" accept="image/*">
        </div>
        <div class="flex gap-2">
            {{#each subImgList}}
                <img src="{{this.url}}" alt="{{this.id}}" class="rounded-lg w-[160px] object-cover">
            {{/each}}
        </div>
        <label for="subImgs" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Sub Images</label>
        <div class="flex mb-2">
            <input name="subImgs" class="block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" id="subImgs" type="file" accept="image/*" multiple onchange="validateSubImages(this)">
        </div>
        <p id="file-error" class="text-red-500 text-sm mt-1 hidden">You can only upload up to 3 image files.</p>
        <div class="w-full flex justify-end gap-2">
            <button type="submit" class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Submit</button>
        </div>
    </form>    
  </div>
    <script>
        function validateSubImages(input) {
            const maxFiles = 3;
            const fileError = document.getElementById('file-error');
            if (input.files.length > maxFiles) {
                fileError.classList.remove('hidden');
                input.value = ''; 
            } else {
                fileError.classList.add('hidden');
            }
        }
        document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('updateBookForm').addEventListener('submit', function(e) {
            e.preventDefault(); 

            var selectedCategories = [];
            var checkboxes = document.querySelectorAll('input[name="categories[]"]');
            checkboxes.forEach(function(checkbox) {
                if (checkbox.checked) {
                    selectedCategories.push(checkbox.value);
                }
            });

            var hiddenInput = document.createElement('input');
            hiddenInput.type = 'hidden';
            hiddenInput.name = 'selectedCategories';
            hiddenInput.value = JSON.stringify(selectedCategories);

            this.appendChild(hiddenInput);
            this.submit();
        });
    });

  </script>
  {{/inline}}
{{/app}}
